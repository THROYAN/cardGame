{% extends "CardGameDemoGameBundle::layout.html.twig" %}

{% block javascripts %}

    <script src="{{ asset('bundles/cardgamedemogamebundle/js/card.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/cardgamedemogamebundle/js/player.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/cardgamedemogamebundle/js/cardTable.js') }}" type="text/javascript"></script>

    <script src="{{ asset('bundles/cardgamedemogamebundle/js/jquery-1.5.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/cardgamedemogamebundle/js/jquery-ui-1.8.14.custom.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/cardgamedemogamebundle/js/jquery.mousewheel.min.js') }}" type="text/javascript"></script>

    <script src="{{ asset('bundles/cardgamedemogamebundle/js/game.js') }}" type="text/javascript"></script>

{% endblock %}

{% block title 'Херня' %}

{% block content %}
    <div id="gameTable" style="width:800px;height:600px;background-color:#0f0"></div>
    <div id = "buttons" style="position: absolute;">
        <button onclick="startGame()">New game</button>
        <button onclick="giveMeMore()" disabled>More</button>
        <button onclick="endGame()" disabled>That's enought</button>
    </div>
    <div id="message" style="position: absolute;font-size:30px;"></div>
    <div id="playerScore" style="position: absolute;left:100px;top:50px;font-size:50px;">Your score: <span>0</span></div>
    <div id="computerScore" style="position: absolute; font-size:50px;">His score: <span>0</span></div>
{% endblock %}